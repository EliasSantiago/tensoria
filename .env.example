# Environment configuration for Tensoria

# =============================================================================
# SECURITY (REQUIRED FOR PRODUCTION!)
# =============================================================================
# API Key for authentication - ALL endpoints except /health require this
# Generate a secure key with: python -c "import secrets; print(f'tensoria_{secrets.token_urlsafe(48)}')"
# IMPORTANT: Set this in production to enable authentication!
API_KEY=

# IP Allowlist for Nginx (Backend IP)
ALLOWED_IP=127.0.0.1

# =============================================================================
# PORTS
# =============================================================================
OLLAMA_PORT=11434
API_PORT=8002

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================
# Timeout for Ollama requests (seconds)
OLLAMA_TIMEOUT=120

# Keep models loaded in memory for this duration
OLLAMA_KEEP_ALIVE=5m

# Number of parallel requests Ollama can handle
OLLAMA_NUM_PARALLEL=1

# =============================================================================
# API CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO

# Default model to use if not specified
DEFAULT_MODEL=mistral

# Maximum tokens for generation
MAX_TOKENS=4096

# Default temperature for generation
DEFAULT_TEMPERATURE=0.7
